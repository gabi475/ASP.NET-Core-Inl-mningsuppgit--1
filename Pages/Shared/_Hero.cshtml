@using FreakyFashion1.Entities
@model List<Product>

@{
    bool IsFirstSlide(Product productcategory)
        => productcategory == Model.First();
}

    <div id="hero" class="hero carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var productcategory in Model)
            {
                <div class="carousel-item @(IsFirstSlide( productcategory) ? " active" : "" )">
                    <div class="row">
                        <div class="col">
                            <h2>@productcategory.Name</h2>
                            <p>@productcategory.Price</p>
                            <a href=$"/productcategory/{@productcategory.Id}" class="btn btn-light">
                                Visa
                            </a>
                        </div>
                        <div class="col">
                            <img src="@productcategory.ImageUrl"
                                 class="d-block w-100"
                                 alt="@productcategory.Name">

                        </div>
                    </div>
                </div>
            }
        </div>

    <a class="carousel-control-prev" href="#hero" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#hero" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>